kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: ct-api-ingress
  namespace: command-center
spec:
  ingressClassName: nginx
  tls:
    - hosts:
        - command-center.eastus.cloudapp.azure.com
      secretName: tls-secret
  rules:
    - host: command-center.eastus.cloudapp.azure.com
      http:
        paths:
          - path: /ct-api(/|$)(.*)
            pathType: Prefix
            backend:
              service:
                name: ct-api-service
                port:
                  number: 80
