kind: Deployment
apiVersion: apps/v1
metadata:
  name: cc-ui
  namespace: command-center
spec:
  replicas: 1
  selector:
    matchLabels:
      app: command-center
      component: cc-ui
      tier: UI
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: command-center
        component: cc-ui
        tier: UI
      annotations:
        kubectl.kubernetes.io/restartedAt: '2024-08-02T06:32:06Z'
    spec:
	  tolerations:
       - key: "CriticalAddonsOnly"
         operator: "Exists"
         effect: "NoSchedule"
      containers:
        - name: cc-ui
          image: devscmct.azurecr.io/cc-ui-image:v1
          ports:
            - containerPort: 80
              protocol: TCP
          resources:
            limits:
              cpu: 400m
              memory: 400Mi
            requests:
              cpu: 200m
              memory: 200Mi
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: Always
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      nodeSelector:
        pool: agentpool
      securityContext: {}
      imagePullSecrets:
        - name: acr-secret
      schedulerName: default-scheduler
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600

