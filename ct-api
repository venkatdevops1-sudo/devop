kind: Deployment
metadata:
  name: ct-api
  namespace: command-center
  labels:
    app: command-center
    component: ct-api
    tier: api
spec:
  replicas: 1
  selector:
    matchLabels:
      app: command-center
      component: ct-api
      tier: api
  template:
    metadata:
      labels:
        app: command-center
        component: ct-api
        tier: api
    spec:
      containers:
