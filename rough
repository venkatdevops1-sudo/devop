kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: ct-api-ingress
  namespace: command-center
spec:
  ingressClassName: nginx
  rules:
    - host: 20.41.241.5  # Using external IP for testing instead of DNS
      http:
        paths:
          - path: /ct-api(/|$)(.*)
            pathType: Prefix
            backend:
              service:
                name: ct-api-service
                port:
                  number: 80
