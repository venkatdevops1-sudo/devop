apiVersion: apps/v1
kind: Deployment
metadata:
  name: ct-ui
  namespace: command-center
  labels:
    app: command-center
    component: ct-ui
    tier: UI
spec:
  replicas: 1
  selector:
    matchLabels:
      app: command-center
      component: ct-ui
      tier: UI
  template:
    metadata:
      labels:
        app: command-center
        component: ct-ui
        tier: UI
    spec:
      tolerations:
      - key: "CriticalAddonsOnly"
        operator: "Exists"
        effect: "NoSchedule"
      containers:
      - name: ct-ui
        image: devscmct.azurecr.io/ct-ui:v1
        ports:
        - containerPort: 80
        resources:
          requests:
            cpu: "200m"    
            memory: "200Mi"
          limits:
            cpu: "400m"    
            memory: "400Mi"
      imagePullSecrets:
      - name: acr-secret
      nodeSelector:
        agentpool: agentpool
